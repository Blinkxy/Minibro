{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Run with Valgrind",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Minishell",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/valgrind",
            "miDebuggerArgs": "--vgdb=no --track-origins=yes --leak-check=full"
        }
    ]
}